<div class="container">
    <div class="row">
        <div class="col s12">
            <h3 class="center-align">You have <%= @requested_list.count %> friends request.</h3>
        </div>
        <div class="col s12">
            <% if @requested_list.count > 0 %>
            <ul class="collection">
                <%= render partial: 'pending_card', collection: @requested_list, as: :person %>
            </ul>
            <% else %>
                <h3>No hay solicitudes pendientes</h3>
            <% end %>
        </div>
    </div>
</div>
