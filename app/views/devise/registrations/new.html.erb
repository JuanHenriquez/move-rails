<div id="hero-background-register">

    <h1 id="login-title">Move</h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name),
        html: { class: "card", role: "form", id: "login-form" }) do |f| %>

        <div class="card-content">
            <div class="row">

                <div class="input-field col s12">
                    <%= f.text_field :first_name, class:"validate", autofocus: true %>
                    <%= label_tag(:first_name, "Name") %>
                </div>

                <div class="input-field col s12">
                    <%= f.email_field :email, class:"validate", autofocus: true %>
                    <%= f.label :email %>
                </div>

                <div class="input-field col s12">
                    <%= f.password_field :password, class:"validate", autocomplete: "off" %>
                    <%= f.label :password %>
                    <% if @minimum_password_length %>
                        <em>(<%= @minimum_password_length %> characters minimum)</em>
                    <% end %><br />
                </div>

                <div class="input-field col s12">
                    <%= f.password_field :password_confirmation, class:"validate", autocomplete: "off" %>
                    <%= f.label :password_confirmation %>
                </div>

                <div class="input-field col s12 center-align">
                    <%= f.submit "Registrarse",
                        class: "waves-effect",
                        id: "btn-login" %>
                </div>
                <%= render "devise/shared/links" %>
            </div>
        </div>
    <% end %>

</div>
