<div id="hero-background-register">

    <h1 id="login-title">Move</h1>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name),
        html: { class: "card", role: "form", id: "login-form" }) do |f| %>

        <div class="card-content">
            <div class="row">
                <% flash.each do |name, msg| %>
                    <p><%= msg if msg.is_a?(String) %></p>
                <% end %>
                <div class="input-field col s12">
                    <%= f.email_field :email, class:"validate" %>
                    <%= f.label :email %>
                </div>

                <div class="input-field col s12">
                    <%= f.password_field :password, class:"validate", autocomplete: "off" %>
                    <%= f.label :password %>
                </div>

                <div class="input-field col s12">
                    <% if devise_mapping.rememberable? -%>
                        <%= f.check_box :remember_me %>
                        <%= f.label :remember_me %>
                    <% end -%>
                </div>

                <div class="input-field col s12 center-align">
                    <%= f.submit "Iniciar Sesion",
                        class: "waves-effect",
                        id: "btn-login" %>
                </div>
                <%= render "devise/shared/links" %>
            </div>
        </div>
    <% end %>

</div>
